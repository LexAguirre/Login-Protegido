    </div>

    <br />
    <center><h1>Personal</h1></center>

    <center>
      <table
        class="styled-table"
        style="
          width: 100%;
          border-collapse: collapse;
          margin: 25px 0;
          font-size: 0.9em;
          font-family: sans-serif;
          min-width: 400px;
          box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        "
      >
        <tr
          style="
            background-color: #086e5d;
            color: #ffffff;
            text-align: center;
            border-bottom: 2px solid #dddddd;
            padding: 12px 15px;
          "
        >
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Número telefonico</th>
          <th>Email</th>
          <th>Contraseña</th>
          <th></th>
          <th></th>
          <!--Se crean dos columnas sin nombre-->
        </tr>
        <!--Dentro de la tabla se estara ingresando la informacion proveniente del json-->
        <% Object.keys(person).forEach(function(prop) { %>
        <!--Menciona que por cada llave de person utilizara un prop-->
        <tr
          style="
            background-color: #f3f3f3;
            border-bottom: 2px solid #009879;
            text-align: center;
          "
        >
          <td style="padding: 12px 15px"><%- person[prop].name %></td>
          <td><%- person[prop].lastName %></td>
          <td><%- person[prop].phone %></td>
          <td><%- person[prop].email %></td>
          <td>$ <%- person[prop].password %></td>
          <td>
            <a href="<%= `deletePerson/${person[prop]._id}` %>">Eliminar</a>
          </td>
          <td><a href="<%= `findById/${person[prop]._id}` %>">Editar</a></td>
        </tr>
        <% }); %>
      </table>
    </center>

    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

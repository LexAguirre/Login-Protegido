<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LogIn</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script
      src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit"
      async
      defer
    ></script>
    <script
      src="https://kit.fontawesome.com/7f30cdf123.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="container-fluid sticky-top" style="background-color: #086e5d">
      <!-- NavBar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand">Farmacia</a>
        <img
          src="https://mir-s3-cdn-cf.behance.net/project_modules/disp/2a69b018212139.562c5c3107147.png"
          width="100"
          height="70"
          alt="logo"
          class="mx-auto d-block"
        />
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-brand" id="navbarNav">
          <form class="form-inline navbar-brand">
            <a
              class="btn btn-sm btn-outline-secondary"
              href="/profile"
              type="button"
              >Perfil</a
            >
            <% if (user.isAdmin != true) { %>
            <a
              class="btn btn-sm btn-outline-secondary"
              href="/listProducto"
              type="button"
              >Vista productos</a
            >
            <% } else{ %>
            <a
              class="btn btn-sm btn-outline-secondary"
              href="/listProducto"
              type="button"
              >Vista productos</a
            >
            <a
              class="btn btn-sm btn-outline-secondary"
              href="/listPerson"
              type="button"
              >Vista personal</a
            >
            <a
              class="btn btn-sm btn-outline-secondary"
              href="/listProvedor"
              type="button"
              >Vista proveedores</a
            >
            <a
              class="btn btn-sm btn-outline-secondary"
              href="/addProducto"
              type="button"
              >Registro productos</a
            >
            <a
              class="btn btn-sm btn-outline-secondary"
              href="/person"
              type="button"
              >Registro personal</a
            >
            <a
              class="btn btn-sm btn-outline-secondary"
              href="/addProvedor"
              type="button"
              >Registro proveedores</a
            >
            <% } %>
            <a class="btn btn-outline-danger" href="/logout" type="button"
              >Cerrar sesi√≥n</a
            >
          </form>
        </div>
      </nav>
    </div>

    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

<%- layout('layouts/main.ejs') %>

<div class="row">
  <div class="container">
    <% if (loginMessage.lenght != 0) { %>
    <div class="alert alert-danger"><%= loginMessage %></div>
    <% } %>
  </div>
  <div class="col-md-4 offset-md-4">
    <div class="card mt-4">
      <div class="card-header text-center">
        <img
          src="https://mir-s3-cdn-cf.behance.net/project_modules/disp/2a69b018212139.562c5c3107147.png"
          width="400"
          height="360"
          alt="logo"
          class="mx-auto d-block"
        />
        <h3>LOG IN</h3>
      </div>
      <div class="card-body">
        <form action="/login" method="POST">
          <div class="form-group">
            <label for="" class="col-form-label"
              ><strong>Correo electrónico:</strong></label
            >
            <input
              class="form-control"
              type="email"
              name="email"
              placeholder="example@email.com"
            />
          </div>
          <div class="form-group">
            <label for="" class="col-form-label"
              ><strong>Contraseña: </strong></label
            >
            <input
              class="form-control"
              type="password"
              name="password"
              placeholder="Escribe tu contraseña"
            />
          </div>
          <div class="form-group">
            <div
              name="reCaptcha"
              class="g-recaptcha"
              data-sitekey="6LeZDuYkAAAAAKxSVmHN8UEp1F7Zl4UN0SWKqtvj"
            ></div>
          </div>

          <div class="">
            <button class="btn btn-primary btn-block mt-4" type="submit">
              Log In
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
